        "label": "sin",
        "action": {"type": "expression", "expression": "sin(x)"},
        "gridPosition": {"row": 1, "column": 4},
        "type": "special",
        "adaptiveSize": true,
        "sizeMode": "content",
        "minWidth": 50,
        "contentPadding": {"left": 6, "top": 4, "right": 6, "bottom": 4}
      },
      {
        "id": "btn_cos",
        "label": "cos",
        "action": {"type": "expression", "expression": "cos(x)"},
