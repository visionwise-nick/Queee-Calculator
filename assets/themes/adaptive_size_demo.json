        "adaptiveSize": true,
        "sizeMode": "content",
        "minWidth": 50,
        "contentPadding": {"left": 6, "top": 4, "right": 6, "bottom": 4}
      },
      {
        "id": "btn_tan",
        "label": "tan",
        "action": {"type": "expression", "expression": "tan(x)"},
        "gridPosition": {"row": 1, "column": 6},
        "type": "special",
        "adaptiveSize": true,
        "sizeMode": "content",
        "minWidth": 50,
        "contentPadding": {"left": 6, "top": 4, "right": 6, "bottom": 4}
      },
      {
        "id": "btn_sqrt",
        "label": "√",
        "action": {"type": "expression", "expression": "sqrt(x)"},
        "gridPosition": {"row": 2, "column": 4},
        "type": "special",
        "adaptiveSize": true,
        "sizeMode": "adaptive",
        "aspectRatio": 1.0
      },
      {
        "id": "btn_square",
        "label": "x²",
        "action": {"type": "expression", "expression": "x*x"},
        "gridPosition": {"row": 2, "column": 5},
        "type": "special",
        "adaptiveSize": true,
        "sizeMode": "adaptive",
        "aspectRatio": 1.0
      },
      {
        "id": "btn_power",
        "label": "x^y",
        "action": {"type": "expression", "expression": "pow(x,y)"},
        "gridPosition": {"row": 2, "column": 6},
        "type": "special",
        "adaptiveSize": true,
        "sizeMode": "content",
        "minWidth": 45,
        "maxWidth": 70
      },
      {
        "id": "btn_log",
        "label": "log",
        "action": {"type": "expression", "expression": "log(x)"},
        "gridPosition": {"row": 3, "column": 4},
        "type": "special",
        "adaptiveSize": true,
        "sizeMode": "content",
        "minWidth": 50
      },
      {
        "id": "btn_ln",
        "label": "ln",
        "action": {"type": "expression", "expression": "ln(x)"},
        "gridPosition": {"row": 3, "column": 5},
        "type": "special",
        "adaptiveSize": true,
        "sizeMode": "content",
        "minWidth": 40
      },
      {
        "id": "btn_factorial",
        "label": "x!",
        "action": {"type": "expression", "expression": "factorial(x)"},
        "gridPosition": {"row": 3, "column": 6},
        "type": "special",
        "adaptiveSize": true,
        "sizeMode": "adaptive",
        "aspectRatio": 1.0
      }
    ]
